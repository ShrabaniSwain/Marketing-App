<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvInvoiceNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inv No: "
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            android:textSize="13sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvInvoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#1245683"
            android:textColor="@color/light_blue"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/tvInvoiceNo"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="13sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvProductTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name: "
            android:textStyle="bold"
            android:textColor="@color/text_Gray"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/ivShare"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Face Wash"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/ivShare"
            app:layout_constraintLeft_toRightOf="@id/tvProductTitle"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintRight_toLeftOf="@id/ivPrint"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/baseline_share_24"/>

        <ImageView
            android:id="@+id/ivPrint"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/baseline_print_24"/>

        <TextView
            android:id="@+id/tvSalesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sales Price: "
            android:textStyle="bold"
            android:textColor="@color/text_Gray"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/ivShare"
            app:layout_constraintRight_toLeftOf="@id/tvSales"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvSales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹ 100"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/ivShare"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvCreditTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit: "
            android:textStyle="bold"
            android:textColor="@color/text_Gray"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tvProductTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tvProductName"
            app:layout_constraintLeft_toRightOf="@id/tvCreditTitle"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvSoldTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sold: "
            android:textStyle="bold"
            android:textColor="@color/text_Gray"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvSalesTitle"
            app:layout_constraintRight_toLeftOf="@id/tvSold"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvSold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvSales"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvReturnTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return: "
            android:textStyle="bold"
            android:textColor="@color/text_Gray"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvSoldTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="7dp"/>

        <TextView
            android:id="@+id/tvReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tvCredit"
            app:layout_constraintLeft_toRightOf="@id/tvReturnTitle"
            android:layout_marginTop="7dp"/>

        <TextView
            android:id="@+id/tvInStockTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instock: "
            android:textStyle="bold"
            android:textColor="@color/text_Gray"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvSoldTitle"
            app:layout_constraintRight_toLeftOf="@id/tvSold"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvInStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:textSize="15sp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvSold"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>