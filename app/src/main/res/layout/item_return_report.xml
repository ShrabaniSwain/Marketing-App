<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintRight_toLeftOf="@id/ivPrint"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:layout_marginEnd="15dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/baseline_share_24"/>

        <ImageView
            android:id="@+id/ivPrint"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/baseline_download"/>

        <TextView
            android:id="@+id/tvItemNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name: "
            android:textStyle="bold"
            android:textColor="@color/text_Gray"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/ivShare"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biscuit"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/ivShare"
            app:layout_constraintLeft_toRightOf="@id/tvItemNameTitle"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvQntTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qnt: "
            android:textStyle="bold"
            android:textColor="@color/text_Gray"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/ivShare"
            app:layout_constraintRight_toLeftOf="@id/tvQnt"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvQnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/ivShare"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textStyle="bold"
            android:textColor="@color/text_Gray"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tvItemNameTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09 Sept 2022"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tvItemName"
            app:layout_constraintLeft_toRightOf="@id/tvDateTitle"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvAmountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount: "
            android:textStyle="bold"
            android:textColor="@color/text_Gray"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvQntTitle"
            app:layout_constraintRight_toLeftOf="@id/tvAmount"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹ 200"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvQntTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>