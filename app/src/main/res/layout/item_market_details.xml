<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 July 2023"
        android:textColor="@color/text_Gray"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:textSize="13sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textStyle="bold"
        android:textColor="@color/text_Gray"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tvDate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shrabani"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            app:layout_constraintLeft_toRightOf="@id/tvNameTitle"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvQntTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qnt: "
            android:textStyle="bold"
            android:textColor="@color/text_Gray"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            app:layout_constraintRight_toLeftOf="@id/tvQnt"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvQnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvAmountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount: "
            android:textStyle="bold"
            android:textColor="@color/text_Gray"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tvNameTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹ 200"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintLeft_toRightOf="@id/tvAmountTitle"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvPaiditle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid: "
            android:textStyle="bold"
            android:textColor="@color/text_Gray"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvQntTitle"
            app:layout_constraintRight_toLeftOf="@id/tvPaid"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹ 0"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvQnt"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvBalanceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance: "
            android:textStyle="bold"
            android:textColor="@color/text_Gray"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvPaiditle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="7dp"/>

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹ 0"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tvPaid"
            app:layout_constraintLeft_toRightOf="@id/tvBalanceTitle"
            android:layout_marginTop="7dp"/>

        <TextView
            android:id="@+id/btnReceive"
            android:layout_width="100dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/tvPaid"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:text="Receive"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/rounded_box"
            android:backgroundTint="@color/green"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:textSize="11sp"
            android:textAllCaps="false"
            android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>